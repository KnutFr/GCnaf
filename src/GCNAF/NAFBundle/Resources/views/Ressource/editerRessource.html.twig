{% extends 'GCNAFNAFBundle::layout.html.twig' %}
{% block content %}			
    <p id="msg"> => Modifier un Salarié</p>
    <div align="center" >							
        {% if message %}<p><font color="#FF00FF">{{ message }}</font></p>{% endif %}					
        <form  method="post" {{ form_enctype(form) }} >					
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div>
                <p class="double2" >{{ form_label(form.cin) }}	   {{ form_widget(form.cin) }}</p>					
                {{ form_errors(form.cin) }}																
            </div>
            <br/>
            <div>
                <p class="double2">{{ form_label(form.nom) }}        {{ form_widget(form.nom) }}</p>
                {{ form_errors(form.nom) }}								
            </div>
            <br/>							
            <div>
                <p class="double">{{ form_label(form.prenom) }}     {{ form_widget(form.prenom) }}</p>
                {{ form_errors(form.prenom) }}																					
            </div>						
            <br/>
            <div>
                <p class="double">{{ form_label(form.login) }}      {{ form_widget(form.login) }}</p>
                {{ form_errors(form.login) }}								
            </div>
            <br/>
            <div>
                <p class="double">{{ form_label(form.pwd) }}   {{ form_widget(form.pwd) }}</p>					
                {{ form_errors(form.pwd) }}															
            </div>
            <br/>
            <div>
                <p class="double">{{ form_label(form.dateEmb) }}   {{ form_widget(form.dateEmb) }}</p>					
                {{ form_errors(form.dateEmb) }}															
            </div>
            <div>
                <p class="double">{{ form_label(form.dateSor) }}   {{ form_widget(form.dateSor) }}</p>					
                {{ form_errors(form.dateSor) }}															
            </div>            
            <br/>            
            <div>
                <p class="double">{{ form_label(form.mail) }}       {{ form_widget(form.mail) }}</p>
                {{ form_errors(form.mail) }}								
            </div>
            <br/>
            <div>
                <p class="double">{{ form_label(form.idProf) }}         {{ form_widget(form.idProf) }}</p>
                {{ form_errors(form.idProf) }}								
            </div>
            <br/>            
            <table border="0" align="center">
                <tr>                    
                    <td width="100px">{{ form_label(form.btnModifier) }} {{ form_widget(form.btnModifier) }}</td>
                    <td></td>
                </tr>
            </table>
                {{ form_end(form) }}					
        </form>	<br/>
        <p><a href="{{ path('GCNAFNAFBundle_salaries') }}">Retour à la liste des salariés</a></p>			
    </div>						
{% endblock %}			

